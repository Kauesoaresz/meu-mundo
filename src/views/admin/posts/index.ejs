<h2 class="admin-title">üìù Posts</h2>
<p class="admin-description">Gerencie os posts do site</p>

<!-- BARRA DE A√á√ÉO -->
<div class="admin-action-bar">
  <span></span>
  <a href="/admin/posts/novo" class="btn btn-primary">+ Novo Post</a>
</div>

<!-- LISTA DE POSTS -->
<div class="admin-post-list">

  <% posts.forEach(post => { %>
    <div class="admin-post-row">

      <!-- THUMB -->
      <div>
        <% if (post.imagem) { %>
          <img
            src="<%= post.imagem %>"
            alt="<%= post.titulo %>"
            class="admin-post-thumb"
          >
        <% } else { %>
          <div class="admin-post-thumb" style="background:#222;"></div>
        <% } %>
      </div>

      <!-- INFO -->
      <div class="admin-post-info">
        <strong><%= post.titulo %></strong>
        <span>
          <%= post.Secao.nome %> ‚Ä¢
          <%= new Date(post.criado_em).toLocaleDateString("pt-BR") %>
        </span>
      </div>

      <!-- STATUS -->
      <div>
        <span style="color: var(--green); font-size: 14px;">
          Publicado
        </span>
      </div>

      <!-- A√á√ïES -->
      <div class="admin-post-actions">
        <a
          href="/admin/posts/<%= post.id %>/editar"
          class="btn btn-primary"
        >
          Editar
        </a>

        <form
          action="/admin/posts/<%= post.id %>/excluir"
          method="POST"
          onsubmit="return confirm('Deseja realmente excluir este post?')"
        >
          <button class="btn btn-danger">Excluir</button>
        </form>
      </div>

    </div>
  <% }) %>

</div>
