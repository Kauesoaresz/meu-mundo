    <label>Objetivo Atual</label>
    <textarea name="objetivo_atual" rows="3">
<%= mundo.objetivo_atual || "" %>
    </textarea>

    <label>Seed</label>
    <input
      type="text"
      name="seed"
      value="<%= mundo.seed || "" %>"
    >

    <div class="admin-actions">
      <button type="submit" class="btn btn-primary">
