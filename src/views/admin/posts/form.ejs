<h2 class="admin-title">
  <%= post ? "‚úèÔ∏è Editar Post" : "‚ûï Novo Post" %>
</h2>

<div class="admin-card">
  <form
  class="admin-form"
  method="POST"
  action="<%= post ? `/admin/posts/${post.id}/editar` : '/admin/posts' %>"
>


    <label>T√≠tulo</label>
    <input
      type="text"
      name="titulo"
      value="<%= post ? post.titulo : "" %>"
      required
    >

    <label>Descri√ß√£o curta</label>
    <input
      type="text"
      name="descricao"
      value="<%= post ? post.descricao : "" %>"
      required
    >

    <label>Imagem (URL)</label>
    <input
      type="text"
      name="imagem"
      value="<%= post ? post.imagem : "" %>"
    >

    <label>V√≠deo do YouTube (opcional)</label>
<input
  type="text"
  name="video_youtube"
  value="<%= post ? post.video_youtube : "" %>"
  placeholder="https://www.youtube.com/watch?v=ABC123XYZ"
>
<small>
  Cole o link completo ou apenas o ID do v√≠deo
</small>

<hr>

<h3>üìç Coordenadas (opcional)</h3>

<label>X</label>
<input
  type="number"
  name="coord_x"
  value="<%= post ? post.coord_x : "" %>"
>

<label>Y</label>
<input
  type="number"
  name="coord_y"
  value="<%= post ? post.coord_y : "" %>"
>

<label>Z</label>
<input
  type="number"
  name="coord_z"
  value="<%= post ? post.coord_z : "" %>"
>

<label>Dimens√£o</label>
<select name="dimensao">
  <option value="">‚Äî</option>
  <option value="overworld" <%= post?.dimensao === "overworld" ? "selected" : "" %>>
    Overworld
  </option>
  <option value="nether" <%= post?.dimensao === "nether" ? "selected" : "" %>>
    Nether
  </option>
  <option value="end" <%= post?.dimensao === "end" ? "selected" : "" %>>
    End
  </option>
</select>


    <label>Se√ß√£o</label>
    <select name="secao_id" required>
      <% secoes.forEach(secao => { %>
        <option
          value="<%= secao.id %>"
          <%= post && post.secao_id === secao.id ? "selected" : "" %>
        >
          <%= secao.nome %>
        </option>
      <% }) %>
    </select>

    <label>Conte√∫do</label>
    <textarea
      name="conteudo"
      rows="6"
      required
    ><%= post ? post.conteudo : "" %></textarea>

    <div class="admin-actions">
      <button class="btn btn-primary">
        Salvar
      </button>

      <a href="/admin/posts" class="btn">
        Cancelar
      </a>
    </div>

  </form>
</div>
