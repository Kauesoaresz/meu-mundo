<h2 class="admin-title">üìù Posts</h2>

<div class="admin-card">
  <div class="admin-actions">
    <p>Gerencie os posts do site</p>
    <a href="/admin/posts/novo" class="btn btn-primary">+ Novo Post</a>
  </div>
</div>

<div class="admin-grid">

  <% posts.forEach(post => { %>
    <div class="admin-card">

      <!-- IMAGEM -->
      <% if (post.imagem) { %>
        <img
          src="<%= post.imagem %>"
          alt="<%= post.titulo %>"
          style="
            width: 100%;
            height: 160px;
            object-fit: cover;
            border-radius: 10px;
            margin-bottom: 12px;
          "
        >
      <% } %>

      <!-- CONTE√öDO -->
      <h3 style="margin-bottom: 6px;">
        <%= post.titulo %>
      </h3>

      <p style="color: var(--muted); font-size: 13px; margin-bottom: 10px;">
        <%= post.Secao.nome %> ‚Ä¢
        <%= new Date(post.criado_em).toLocaleDateString("pt-BR") %>
      </p>

      <!-- A√á√ïES -->
      <div class="admin-actions" style="justify-content: flex-start; gap: 10px;">
        <a
          href="/admin/posts/<%= post.id %>/editar"
          class="btn btn-primary"
        >
          Editar
        </a>

        <form
          action="/admin/posts/<%= post.id %>/excluir"
          method="POST"
          onsubmit="return confirm('Deseja realmente excluir este post?')"
        >
          <button class="btn btn-danger">
            Excluir
          </button>
        </form>
      </div>

    </div>
  <% }) %>

</div>
